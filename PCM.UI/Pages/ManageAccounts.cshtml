@page "{Name?}"
@model PCM.UI.Pages.ManageAccountsModel
@{

    ViewData["Title"] = "Manejar Usuarios";

}
<div class="container text-center">
    <h3 class="text-white">@ViewData["Title"]</h3>
</div>

<div class="container">

    <div style="background: #ffff; padding: 30px; border-radius: 10px;  max-width:1000px; margin:auto; margin-top:20px">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.Users != null)
        {
            <div class="table-responsive" style="height:180px">

                <table class="table table-bordered table-sm" style="width: 100%;">
                    <thead class="thead-dark">
                        <tr>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th>...</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td style="font-size:small">@Html.DisplayFor(modelItem => user.UserName)</td>
                                <td style="font-size:small">@Html.DisplayFor(modelItem => user.Role)</td>
                                <td style="font-size:small"> <a class="btn btn-success btn-sm" asp-area="Identity" asp-page="/Account/ResetPassword" asp-route-UserFP="@user.UserName"><img src="~/Icons/drive_file_move-white-18dp.svg" alt="search" /></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }

    </div>
</div>
