@page
@model PCM.UI.Pages.ReportsModel
@{
    ViewData["Title"] = "Reportes";
}
<div class="container text-center">
    <h3 class="text-white">@ViewData["Title"]</h3>
</div>
<div class="container">
    <div style="background: #fff; padding: 30px; border-radius: 10px; margin-top: 5px; width:100%">
        <form method="post">
            <div class="row">
                <div class="col-lg-6, col-sm-12">
                    <label>Fechas inicial.</label>
                    <input style="width:300px" class="form-control" type="date" asp-for="@Model.Date1">
                </div>
                <div class="col-lg-6, col-sm-12">
                    <label>Fechas final.</label>
                    <input style="width:300px" class="form-control" type="date" asp-for="@Model.Date2">
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    @if (Model.AllARS.Count != 0 || Model.AllARS == null)
                    {
                        <label>Seguro</label>
                        <select asp-for="@Model.Insurance" class="form-control">
                            <option value="Privado" selected class="text-muted">Elegir...</option>
                            <option value="Privado">Privado</option>
                            @foreach (var ARS in Model.AllARS)
                            {

                                <option value="@ARS.Name">@ARS.Name</option>

                            }

                        </select>
                    }

                </div>
            </div>

            <button type="submit" class="btn btn-primary text-white mt-1"><alt ="Generate" />Generar reporte</button>
        </form>
    </div>
</div>