@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Borrar cuenta.";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="text-white">@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert" style="max-width:400px">
    <p>
        <strong>Hacer esto eliminara su informacion permanentemente y no se puede revertir.</strong>
    </p>
</div>

<div>
    <form style="background: #fff; padding: 30px; border-radius: 10px; max-width: 400px" id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Borrar y cerrar cuenta</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}