@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar contraseña.";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div class="container">
    <h4 class="text-white">@ViewData["Title"]</h4>
</div>
<div class="container">
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        <div class="col-md-6">
            <form style="background: #fff; padding: 30px; border-radius: 10px; max-width: 400px" id="change-password-form" method="post">
                <div class="form-group">
                    <input asp-for="Input.OldPassword" class="form-control" placeholder="Contraseña actual" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.NewPassword" class="form-control" placeholder="Nueva contraseña" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmar contraseña" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Actualizar contraseña</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>
