@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Olvido su contraseña?";
}


<div class="container">
    <h1 class="text-white">@ViewData["Title"]</h1>
    <h4 class="text-white">Introduzca su nombre de usuario al que decea reiniciar su contraseña</h4>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="text" asp-for="Input.User" class="form-control" placeholder="Usuario" />
                <span asp-validation-for="Input.User" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Someter</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
